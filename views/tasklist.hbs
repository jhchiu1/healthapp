<a href="/auth"><h1>[ HealthApp &#9829; ]</h1></a><p>

<h1>EXERCISES</h1>
<div class="taskinfo">
    <div class="addtask">
        <form method="POST" action="/tasks/user/{{user_id}}/tasklist/add" class="add_form">
            <input id="addtask_text" name="text" type="text" placeholder="Enter an exercise" required>
            <input type="hidden" name="_id" value="{{user._id}}">
            <input class="addtask_button" type="submit" value="ADD Exercise">
        </form>
    </div>

    <div class="messages">
        {{#if messages}}
            <p class="error_msg">{{messages.error}}</p>
            <p class="info_msg">{{messages.info}}</p>
        {{/if}}
    </div>

    <div class="tasklist">
        {{#each tasks}}
            <p>{{@tasklist}}: <a href="/user/{{user_id}}/tasklist/{{this._id}}">{{this.text}}<br>{{this.dateCreated}}</a></p>


            <form method="POST" action="/tasks/user/{{user._id}}/tasklist/done" class="done_form">
                <input type="hidden" name="_id" value="{{this._id}}">
                <input class="donetask_button" type="submit" name="done" value="Done">
            </form>
<p></p>
            <form method="POST" action="/tasks/user/{{user._id}}/tasklist/task/{{this._id}}/delete" class="delete_form">
                <input type="hidden" name="_id" value="{{this._id}}">
                <input class="deletetask_button" type="submit" name="delete" value="Delete">
            </form>
        {{else}}
            <p>There are no exercises. Time to schedule some!</p>
        {{/each}}

<br>

<p></p><br>
        <div class="navigation">
            <a href="/"><input class="exercises_button" type="submit" value="EXERCISES"></a><p></p>
            <a href="/completed"><input class="completedex_button" type="submit" value="Completed Exercises"></a>
        </div>
<p></p>
        <div class="alldone">
            {{#if tasks}}
                <form action="tasks/user/{{user._id}}/tasklist//alldone" method="POST">
                    <input class="all_done_button" type="submit" value="Finished ALL exercises!">
                </form>
            {{/if}}</div>

    </div>
</div>