<a href="/auth"><h1>[ HealthApp &#9829; ]</h1></a><p>
<div id="auth-messages">

    <!-- Sign up failure messages -->
    <ul>{{#each messages}}
        <li>{{this}}</li>
    {{/each}}
    </ul>

</div>

<div id='login'>

    <h2>||- Log in -||</h2>

    <form action="/auth/login" method="POST">
        <label for="username">Username</label>
        <input type="text" name="username" required>
        <br>
        <label for="password">Password</label>
        <input type="password" name="password" required>
        <p>
        <input class="login_button" type="submit" value="L O G I N ">
    </form>

</div>

<h2>||- Log in with Twitter -||</h2>

<p><a href="/auth/twitter"><input class="twitter_button" type="submit" value="S I G N   I N   W I T H   T W I T T E R"></a></p>


<div id='signup'>

    <h2>||- Sign Up For An Account -||</h2>

    <form action="/auth/signup" method="POST">
        <label for="username">Username</label>
        <input type="text" name="username" required>
        <br>
        <label for="password">Password</label>
        <input type="password" name="password" required>
        <p>
        <input class="signup_button" type="submit" value="S I G N   U P ">
    </form>
<br><br>


</div>